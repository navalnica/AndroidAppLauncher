<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navHeaderHeight"
    android:background="?attr/colorPrimary"
    android:padding="@dimen/largeOffset"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom">

    <ImageView
        android:id="@+id/navDrawerAuthorImage"
        android:layout_width="@dimen/navDrawerImage"
        android:layout_height="@dimen/navDrawerImage"
        android:src="@drawable/author_circle"
        android:contentDescription="@string/authorImageContentDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:layout_marginTop="@dimen/largeOffset"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>