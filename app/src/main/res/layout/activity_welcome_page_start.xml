<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <!--TODO: make resource from png icon file-->
        <ImageView
            android:layout_width="@dimen/profileImage"
            android:layout_height="@dimen/profileImage"
            android:contentDescription="@string/authorImageContentDescription"
            android:src="@drawable/author_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/welcomeMainText"
            android:layout_marginTop="@dimen/offset" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/greeting"
            android:textSize="@dimen/welcomeSecondaryText"
            android:layout_marginTop="@dimen/offset" />

    </LinearLayout>

    <Button
        android:id="@+id/welcomePageStartNextButton"
        style="@style/buttonNext"
        android:theme="@style/coloredAppCompatButton" />

</RelativeLayout>
