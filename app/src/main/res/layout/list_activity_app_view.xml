<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/recyclerViewOffset">

    <!--TODO: make icon round-->
    <ImageView
        android:id="@+id/listActivityAppIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/recyclerViewOffset"
        android:contentDescription="@string/appIconContentDescription"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:padding="@dimen/recyclerViewOffset">

        <TextView
            android:id="@+id/listActivityAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listActivityAppDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/recyclerViewOffset"/>

    </LinearLayout>

</LinearLayout>