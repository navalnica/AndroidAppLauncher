<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/welcomePageSideDivider"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appDescription1"
            android:textSize="@dimen/welcomeMainText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeOffset"
            android:text="@string/appDescription2"
            android:textSize="@dimen/welcomeSecondaryText" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/welcomePageSideDivider"
        android:layout_height="match_parent" />

</LinearLayout>
