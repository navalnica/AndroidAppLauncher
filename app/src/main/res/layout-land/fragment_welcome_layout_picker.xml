<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutPickerContinueButton"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/offset"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutPickerStandardBlock"
            style="@style/layoutPickerRadioButtonBlock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/layoutPickerStandardRadioButton"
                android:text="@string/layoutStandardName"
                style="@style/layoutPickerRadioButton" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/layoutStandardDescription"
                android:textSize="@dimen/layoutPickerSecondaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPickerCompactBlock"
            style="@style/layoutPickerRadioButtonBlock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/offset">

            <RadioButton
                android:id="@+id/layoutPickerCompactRadioButton"
                android:text="@string/layoutCompactName"
                style="@style/layoutPickerRadioButton" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/layoutCompactDescription"
                android:textSize="@dimen/layoutPickerSecondaryText" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/layoutPickerContinueButton"
        style="@style/buttonContinue"
        android:layout_alignParentEnd="true"
        android:text="@string/buttonFinish"
        android:theme="@style/coloredAppCompatButton" />

</RelativeLayout>