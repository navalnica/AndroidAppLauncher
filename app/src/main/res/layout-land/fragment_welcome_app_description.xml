<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/welcomeLandImageWithText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="@string/appDescription1"
            android:textSize="@dimen/welcomeMainText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="@string/appDescription2"
            android:layout_marginTop="@dimen/largeOffset"
            android:textSize="@dimen/welcomeSecondaryText" />

    </LinearLayout>

    <Button
        android:id="@+id/appDescriptionContinueButton"
        style="@style/buttonContinue"
        android:theme="@style/coloredAppCompatButton"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

